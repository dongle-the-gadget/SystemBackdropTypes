<Window x:Class="SystemBackdropTypes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Transparent"
        Title="DWM System Backdrop Type Sample" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton Margin="0,0,40,0" MinWidth="0" Checked="RadioButton_Checked" Tag="3">Acrylic</RadioButton>
            <RadioButton Margin="0,0,40,0" MinWidth="0" Checked="RadioButton_Checked" Tag="2">Mica</RadioButton>
            <RadioButton MinWidth="0" Checked="RadioButton_Checked" Tag="4">Tabbed</RadioButton>
        </StackPanel>
    </Grid>
</Window>
